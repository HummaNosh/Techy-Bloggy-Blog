

<div class='container-fluid'>
    <div class='col-md-12'>
      <h2>Add New Article</h2>
      <form class='newPostForm'>
        <div class='form-group col-6'>
          <label for='new-Post-Title'>Title</label>
          <input type='text' class='form-control' id='new-Post-Title' placeholder='Enter your New Posts Title Here'>
        </div>
        <div class='form-group'>
          <label for='new-Post-Content'>Content</label>
          <textarea type='text' class='form-control' id='new-Post-Content' placeholder='Enter your blogs Content Here' rows='10'></textarea>
        </div>
        <div class='btn-group'>
          <button class='btn btn-primary submit' id='btn-save' type='submit'>Submit Blog</button>
          <button class='btn btn-warning submit' id='btn-cancel' type='reset'>Cancel</button>
        </div>
      </form>
    </div>
</div>

<script src="/js/createBlog.js"></script>