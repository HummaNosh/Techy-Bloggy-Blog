
  {{#if posts}}
  <div class="col-md-6">
    <h3>Current Blog Posts:</h3>

    {{#each posts}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/dashboard/posts/{{id}}">{{title}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
  <div class="card">
      <div class="card-header bg-light flex-row justify-space-between">
        <h2>
          {{title}}
        </h2>
        <h3>
            {{content}}
        </h3>
        <div>
          Post by
          {{user.username}}
          on
          {{format_date date_created}}
        </div>
      </div>
    </div>